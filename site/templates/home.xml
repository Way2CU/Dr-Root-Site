<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_home"/>
			</title>
			<cms:collection include="page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Top section of the site -->
			<cms:desktop>
				<cms:template file="parts/header.xml"/>
			</cms:desktop>

			<cms:mobile>
				<cms:template file="parts/header_mobile.xml"/>
			</cms:mobile>

			<cms:desktop>
				<section id="slider">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="home_page_slider"
						template="parts/slider.xml"
						/>
						<div class="form_wrap">
							<p><cms:text constant="title_form"/></p>
							<cms:module
									name="contact_form"
									action="show"
									text_id="contact"
									/>
						</div>
				</section>
			</cms:desktop>

			<cms:mobile>
				<section id="slider">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="home_page_mobile_slider"
						template="parts/slider.xml"
						/>
				</section>
				<div class="form_wrap">
					<p><cms:text constant="title_form"/></p>
					<cms:module
							name="contact_form"
							action="show"
							text_id="contact"
							/>
				</div>
			</cms:mobile>

			<section id="introduction">
				<cms:desktop>
					<img src="_BASEURL.'/site/images/hen.jpg'"  alt="hen_segal" cms:eval="src"/>
				</cms:desktop>

				<article>
					<cms:module
						name="articles"
						action="show"
						text_id="introduction_article"
						template="parts/article.xml"
						/>
				</article>

				<cms:mobile>
					<img src="_BASEURL.'/site/images/hen.jpg'"  alt="hen_segal" cms:eval="src"/>
				</cms:mobile>
			</section>

			<section id="features">
				<ul>
					<cms:module
						name="articles"
						action="show_list"
						group="features"
						template="parts/features.xml"
						/>
				</ul>
			</section>

			<section id="testimonial">
				<cms:module
					name="articles"
					action="show_list"
					group="testimonials"
					template="parts/testimonial_article.xml"
					/>
			</section>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>