<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title>
				<cms:text constant="site_title"/>
				<cms:raw text=" - "/>
				<cms:text constant="menu_about"/>
			</title>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<!-- Top section of the site -->
			<cms:template file="parts/header.xml"/>

			<section id="about">
				<cms:module
					name="articles"
					action="show"
					text_id="main_about"
					template="parts/article2.xml"
					/>
				<div class="gallery_container">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="about_gallery"
						template="parts/gallery_images.xml"
						/>
				</div>

				<div id="video_container">
					<cms:module
						name="youtube"
						action="show_list"
						group_text_id="videos"
						template="parts/video_list.xml"
						/>
				</div>	
			</section>

			<!-- Bottom section of the site -->
			<cms:template file="parts/footer.xml"/>
		</body>
	</html>
</document>